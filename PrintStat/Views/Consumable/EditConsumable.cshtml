<script language="javascript">
    $(document).ready(function ($) {
        var e = document.getElementById('color');
        e.style.display = 'none';
        $('#Type_onsumableID').change(function () {
            var obj = $("#Type_onsumableID :selected");
            var url = "/Consumable/checkCartridge/";

            $.get(url, { TypeName: "картридж" }, function (data) {
                var id = (data);
                if (obj.val() == id) {
                    e.style.display = 'block';
                } else {
                    e.style.display = 'none';
                }
            });
        });
    });
</script>


@using (Html.BeginForm("EditConsumable", "Consumable", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <h2>
        Редактирование комплектующего
    </h2>
    <fieldset>
        <div class="control-group">
            <label class="control-label" for="TypeConsumableID">
                Тип комплектующего
            </label>

            <div class="styled-select">
                @Html.DropDownList("TypeConsumableID", new SelectList(ViewBag.TypeConsumable, "ID", "Name"))
                @Html.ValidationMessage("TypeConsumableID")
            </div>

            <label class="control-label" for="Name">
                Наименование
            </label>

