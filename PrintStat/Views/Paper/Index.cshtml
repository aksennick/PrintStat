@model IList<PrintStat.PaperType>
@{
    ViewBag.Title = "Типы бумаги";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Типы бумаги</h2>

<p>
    <div class="menu">
        <a href="@Url.Action("CreatePaperType", "Paper")">Добавить тип бумаги</a>
    </div>

</p>

<p>
    <table>
        <thead>
            <tr>
                <th>Наименование</th>
                <th>Ширина, см</th>
                <th>Длина, см</th>

                <th>Редакция</th>
                <th>Удаление</th>
            </tr>
        </thead>
        @foreach (var papertype in Model)
        {
            <tr>
                <td width="200">
                    @papertype.Name
                </td>
                <td width="80">
                    @papertype.Width_cm
                </td>

                <td width="80">
                    @papertype.Height_cm
                </td>
                
                <td width="80">
                    <a href="@Url.Action("EditPaperType", "Paper", new { id = @papertype.ID })">●</a>
                </td>
                <td width="80">
                    <a href="@Url.Action("DeletePaperType", "Paper", new { id = @papertype.ID })"><font color="red">●</font></a>
                </td>
            </tr>
        }
    </table>
</p>



